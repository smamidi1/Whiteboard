<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="PersistenceUnit-1">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>models.AssignmentEntity</class>
        <class>models.ClassesEntity</class>
        <class>models.ScheduleEntity</class>
        <class>models.StudentEntity</class>
        <class>models.TaEntity</class>
        <class>models.UserEntity</class>

        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306"/>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value=""/>
        </properties>
    </persistence-unit>
</persistence>